{
  "name": "claude-code-ts",
  "version": "0.1.1",
  "description": "TypeScript SDK wrapper for Claude Code",
  "main": "./dist/mod.js",
  "module": "./dist/mod.js",
  "types": "./dist/mod.d.ts",
  "exports": {
    ".": {
      "import": "./dist/mod.js",
      "types": "./dist/mod.d.ts"
    }
  },
  "scripts": {
    "build": "bun build mod.ts --outdir dist --target node && tsc --declaration --emitDeclarationOnly --outDir dist",
    "test": "bun test",
    "dev": "bun --watch mod.ts",
    "prepublishOnly": "bun run build"
  },
  "repository": {
    "type": "git",
  "url": "git+https://github.com/ssobhani/ClaudeCodeTS.git"
  },
  "keywords": [
    "claude",
    "anthropic",
    "ai",
    "sdk",
    "typescript",
    "bun"
  ],
  "author": "ssobhani",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
