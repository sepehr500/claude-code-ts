  "scripts": {
    "build": "deno run --allow-all scripts/build.ts",
    "test": "npm run build && cd npm && npm test",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthropics/claude-code-sdk-ts.git"
  },
  "keywords": [
    "claude",
    "anthropic",
    "ai",
    "sdk",
    "typescript",
    "deno"
  ],
  "author": "Anthropic",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}