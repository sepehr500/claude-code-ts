{
  "name": "@anthropic/claude-code-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK wrapper for Claude Code",
  "main": "./esm/mod.js",
  "module": "./esm/mod.js",
  "types": "./esm/mod.d.ts",
  "exports": {
    ".": {
      "import": "./esm/mod.js",
      "require": "./script/mod.js",
      "types": "./esm/mod.d.ts"
    }
